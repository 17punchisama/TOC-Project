{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "lib": ["ES6", "DOM"]
  },
  "include": ["src/**/*"]
}
